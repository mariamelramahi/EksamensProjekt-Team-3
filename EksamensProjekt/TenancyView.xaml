<Window x:Class="EksamensProjekt.TenancyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EksamensProjekt"
        xmlns:vm="clr-namespace:EksamensProjekt.Utilities"
        mc:Ignorable="d"
        Title="MainWindow" Height="646" Width="999"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <vm:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>
    </Window.Resources>

    <Grid>

        <Rectangle HorizontalAlignment="Left" Height="630" VerticalAlignment="Center" Width="170" Fill="#FF006DA0"/>
        <!--Buttons-->
        <Button Margin="928,0,6,559" BorderBrush="{x:Null}" Command="{Binding ExitCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Background="{x:Null}" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/ExitImage.png" Height="45"/>
            </StackPanel>
        </Button>
        <Button Content="Tilføj nyt"
HorizontalAlignment="Left"
Margin="236,80,0,0"
VerticalAlignment="Top"
Width="109"
Background="White"
Foreground="#FF006DA0"
Height="32"
FontFamily="Bahnschrift Light" 
Command="{Binding LoginCommand}" CommandParameter="{Binding}" FontSize="16" BorderBrush="#FF006DA0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Historik"
    HorizontalAlignment="Left"
    Margin="791,10,0,0"
    VerticalAlignment="Top"
    Width="109"
    Background="White"
    Foreground="#FF006DA0"
    Height="32"
    FontFamily="Bahnschrift Light" 
    Command="{Binding LoginCommand}" CommandParameter="{Binding}" FontSize="16" BorderBrush="#FF006DA0">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <!--images-->
        <Image Margin="0,-13,909,553" Source="/Images/LogoImage.png" Stretch="Uniform" Width="90"/>

        <!--Comboboxes-->
        <ComboBox HorizontalAlignment="Left" Margin="25,293,0,0" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}" Foreground="Black"/>
        <ComboBox HorizontalAlignment="Left" Margin="25,365,0,0" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}" Foreground="Black"/>
        <ComboBox HorizontalAlignment="Left" Margin="25,210,0,0" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}" Foreground="Black"/>
        <!--Labels-->
        <Label Content="Lejligheder - Oversigt" HorizontalAlignment="Left" Margin="226,36,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Tahoma" Foreground="#FF006DA0"/>

        <!--Searchbox-->
        <Rectangle HorizontalAlignment="Left" Height="27" Margin="683,80,0,0" Stroke="#FFA4A4A4" VerticalAlignment="Top" Width="293">
        </Rectangle>
        <Grid HorizontalAlignment="Left" Margin="683,80,0,0" VerticalAlignment="Top">

            <!-- TextBox for user input -->
            <TextBox x:Name="SearchBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Height="27" FontSize="18" FontFamily="Tahoma" BorderBrush="{x:Null}" Foreground="Black"/>

            <!-- Placeholder TextBlock -->
            <TextBlock Text="Søg"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"
                       Foreground="#FFA4A4A4"
                       IsHitTestVisible="False"
                       Visibility="{Binding Text.Length, ElementName=SearchBox, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
        </Grid>
        <Rectangle StrokeThickness="2" Margin="938,81,0,502">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Images/SearchIconImage.png" Stretch="Uniform"/>
            </Rectangle.Fill>
        </Rectangle>
        <!--Listbox-->
        <ListBox x:Name="AddressListBox"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="False"
                 Margin="226,133,48,33">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Expander Header="{Binding Address}" Padding="5" FontSize="16" Margin="5" ExpandDirection="Down">
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                            <Grid Margin="10">
                                <!-- Define the layout of the Expander using Grid -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Tenancy ID -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Lejemåls ID: " FontWeight="Bold"/>
                                    <TextBox Width="100" Text="{Binding TenancyID}" IsReadOnly="True" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Tenancy Status -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Lejemåls Status: " FontWeight="Bold"/>
                                    <ComboBox Width="150" ItemsSource="{Binding DataContext.TenancyStatusList, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding TenancyStatus}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Move In Date -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Indflytningsdato: " FontWeight="Bold"/>
                                    <DatePicker SelectedDate="{Binding MoveInDate}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Move Out Date -->
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Fraflytningsdato: " FontWeight="Bold"/>
                                    <DatePicker SelectedDate="{Binding MoveOutDate}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Size -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="M²: " FontWeight="Bold"/>
                                    <TextBox Width="50" Text="{Binding Size}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Rent -->
                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Husleje: " FontWeight="Bold"/>
                                    <TextBox Width="100" Text="{Binding Rent}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Rooms -->
                                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Værelser: " FontWeight="Bold"/>
                                    <TextBox Width="50" Text="{Binding Rooms}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Bathrooms -->
                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Badeværelser: " FontWeight="Bold"/>
                                    <TextBox Width="50" Text="{Binding Bathrooms}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Dog Allowed -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Hund tilladt: " FontWeight="Bold"/>
                                    <ComboBox Width="100" ItemsSource="{Binding DataContext.DogAllowedList, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding DogAllowed}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Company -->
                                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Boligselskab: " FontWeight="Bold"/>
                                    <TextBlock Width="150" Text="{Binding Company}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Tenant -->
                                <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5,10,5">
                                    <TextBlock Text="Lejer: " FontWeight="Bold"/>
                                    <ComboBox Width="150" ItemsSource="{Binding DataContext.TenantList, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding Tenant}" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button Content="Gem Ændringer" Click="SaveButton_Click" Background="#FF006DA0" Foreground="White" Margin="5,0,0,0" Width="100">
                                        <Button.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="Slet Lejer" Background="#FF006DA0" Foreground="White" Margin="5,0,0,0" Width="100">
                                        <Button.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="Tilføj Lejer" Background="#FF006DA0" Foreground="White" Margin="5,0,0,0" Width="100">
                                        <Button.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Expander>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
